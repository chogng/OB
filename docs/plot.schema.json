{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://appointer.example/schema/originbridge/plot.schema.json",
  "title": "OriginBridge plot.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "graphs"],
  "properties": {
    "version": { "type": "integer", "const": 1 },
    "csv": { "type": "string", "minLength": 1 },
    "template": { "type": "string", "minLength": 1 },
    "graphs": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/graph" }
    },
    "output": { "$ref": "#/$defs/output" }
  },
  "$defs": {
    "columnRef": {
      "description": "Column reference by 0-based index or CSV header name.",
      "oneOf": [
        { "type": "integer", "minimum": 0 },
        { "type": "string", "minLength": 1 }
      ]
    },
    "series": {
      "type": "object",
      "additionalProperties": false,
      "required": ["x", "y"],
      "properties": {
        "x": { "$ref": "#/$defs/columnRef" },
        "y": { "$ref": "#/$defs/columnRef" },
        "label": { "type": "string" },
        "type": {
          "description": "Origin plot type code (preferred) or a future string alias.",
          "oneOf": [{ "type": "integer", "minimum": 0 }, { "type": "string", "minLength": 1 }]
        }
      }
    },
    "graph": {
      "type": "object",
      "additionalProperties": false,
      "required": ["series"],
      "properties": {
        "name": { "type": "string" },
        "template": { "type": "string", "minLength": 1 },
        "layer": { "type": "integer", "minimum": 0, "default": 0 },
        "series": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/series" }
        }
      }
    },
    "output": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "projectName": { "type": "string", "minLength": 1 },
        "export": { "type": "array" }
      }
    }
  }
}

