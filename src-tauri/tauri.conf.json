{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OriginBridge",
  "version": "0.1.0",
  "identifier": "com.appointer.originbridge",
  "build": {
    "removeUnusedCommands": true,
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "OriginBridge",
        "width": 1000,
        "height": 700,
        "minWidth": 1000,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "maximized": false,
        "center": true,
        "decorations": true,
        "alwaysOnTop": false,
        "transparent": false,
        "shadow": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' tauri: ipc: http://ipc.localhost"
    },
    "macOSPrivateApi": false
  },
  "bundle": {
    "createUpdaterArtifacts": false,
    "active": true,
    "targets": "nsis",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Appointer",
    "category": "DeveloperTool",
    "shortDescription": "Plot Origin packages exported from Appointer",
    "longDescription": "OriginBridge is a small local helper that opens a downloaded Origin package ZIP and plots it in Origin automatically.",
    "copyright": "Copyright (c) 2026 Appointer. All rights reserved.",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "signingIdentity": "-",
      "providerShortName": null,
      "entitlements": null,
      "exceptionDomain": ""
    },
    "windows": {
      "nsis": {
        "installMode": "currentUser",
        "installerHooks": "nsis/installer-hooks.nsh"
      }
    }
  }
}
